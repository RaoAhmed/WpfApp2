<UserControl x:Class="WpfApp2.CustomControls.ForBase64"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp2.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Border Background="#DBBDF3" CornerRadius="25">
        <Grid Background="#D9D9D9"  VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="30">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <!--<RowDefinition Height="*"/>-->
            </Grid.RowDefinitions>
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <Label Content="Please Drag n Drop a file to open" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="20" />
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Orientation="Horizontal" Margin="20">
                    <Button x:Name="Open" MinWidth="100"
                Click="Open_Click" Content="Open" Margin="10"/>
                    <Button x:Name="Save" MinWidth="100" Margin="10"
                Click="Save_Click" Content="Save As" />
                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
